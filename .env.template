# ABC Application Environment Configuration
# Copy this file to .env and fill in your actual API keys

# LLM API Keys (at least one required)
GROK_API_KEY=your_grok_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://abc_user:secure_password_here@localhost:5432/abc_application

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys for Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
NEWSAPI_API_KEY=your_newsapi_key_here
FRED_API_KEY=your_fred_key_here
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_key_here

# Twitter/X API (optional)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Interactive Brokers API (Paper Trading)
IBKR_USERNAME=your_ibkr_username_here
IBKR_PASSWORD=your_ibkr_password_here
IBKR_ACCOUNT_ID=DUF123456  # Your IBKR paper trading account ID
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # Paper trading port (live trading uses 7496)
IBKR_CLIENT_ID=1

# Development/Production Mode
DEV_MODE=false
LOG_LEVEL=INFO

# Application Settings
APP_PORT=8000
APP_HOST=0.0.0.0

# Security Settings
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=02:00

# Health Monitoring
HEALTH_CHECK_INTERVAL=300
API_TIMEOUT=30

# Risk Management Defaults
DEFAULT_MAX_DRAWDOWN=0.05
DEFAULT_POP_FLOOR=0.65
DEFAULT_MAX_POSITION_SIZE=0.30