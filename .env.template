# ABC Application Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# IBKR PAPER TRADING CONFIGURATION
# ===========================================
# Get these from your IBKR account at https://www.interactivebrokers.com/
IBKR_USERNAME=your_ibkr_username_here
IBKR_PASSWORD=your_ibkr_password_here
IBKR_ACCOUNT_ID=DUF123456  # Your paper trading account ID (starts with DU)

# IBKR Connection Settings (Paper Trading defaults)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# ===========================================
# API KEYS (Required for full functionality)
# ===========================================
# Get from https://console.grok.xai.com/
GROK_API_KEY=your_grok_api_key_here

# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get from https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Get from https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# ===========================================
# OPTIONAL SERVICES
# ===========================================
# Redis for caching (optional but recommended)
REDIS_HOST=127.0.0.1
REDIS_PORT=6380

# Langfuse monitoring and tracing (optional but recommended for agent analytics)
LANGFUSE_PUBLIC_KEY=pk-lf-2a0d97e1-3bc9-4273-81f2-2fcdf40b4bfc
LANGFUSE_SECRET_KEY=sk-lf-63cfca16-1157-4141-be1f-703b82d6c14f
LANGFUSE_HOST=https://us.cloud.langfuse.com
LANGFUSE_ENABLED=true
LANGFUSE_ENVIRONMENT=development

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Discord channel configuration (optional)
# Get Guild ID by enabling Developer Mode in Discord, right-clicking on the server and selecting "Copy Server ID"
DISCORD_GUILD_ID=your_guild_id_here
# Health monitoring channel for system status, API health, memory usage (replaces general channel)
DISCORD_HEALTH_CHANNEL_ID=your_health_channel_id_here
# Trade alerts channel for trade notifications
DISCORD_ALERTS_CHANNEL_ID=your_alerts_channel_id_here
# Ranked trades channel for trade proposals
DISCORD_RANKED_TRADES_CHANNEL_ID=your_ranked_trades_channel_id_here
# Bot token for the workflow orchestrator
DISCORD_ORCHESTRATOR_TOKEN=your_bot_token_here

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=data/logs/abc_application.log

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
# Memory limits (adjust based on your system)
MAX_MEMORY_MB=2048
CACHE_SIZE_MB=512

# API timeouts
API_TIMEOUT_SECONDS=30
IBKR_TIMEOUT_SECONDS=60

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Encryption key for sensitive data (generate a random 32-character string)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in all required values above
# 3. Never commit .env to version control
# 4. Keep credentials secure and rotate regularly